<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <size
        android:width="100dp"
        android:height="25dp" />

    <!-- padding设置内容区域离边界的间距 -->
    <padding
        android:bottom="4dp"
        android:left="4dp"
        android:right="4dp"
        android:top="4dp" />

    <gradient
        android:angle="90"
        android:endColor="#343435"
        android:startColor="#2D2D2D" />

</shape>